        </field>

       <field name="limit"
               type="limitbox"
               label="COM_DIARIOOFICIAL_LIST_LIMIT"
               description="COM_DIARIOOFICIAL_LIST_LIMIT_DESC"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>